{
    "install_aws_cli_latest": {
        "image": "archlinux:latest",
        "features": {
            "aws-cli": {
                "version": "latest"
            }
        }
    },
    "install_sam_standalone": {
        "image": "archlinux:latest",
        "features": {
            "aws-cli": {
                "installSam": "standalone"
            }
        }
    },
    "install_sam_standalone_specific": {
        "image": "archlinux:latest",
        "features": {
            "aws-cli": {
                "installSam": "standalone",
                "samVersion": "v1.113.0"
            }
        }
    },
    "install_sam_python": {
        "image": "archlinux:latest",
        "features": {
            "aws-cli": {
                "installSam": "python"
            }
        }
    }
}